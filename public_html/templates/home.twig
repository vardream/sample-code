{% extends "default.twig" %}

{% block content %}
  {% if content.body %}
    {% autoescape false %}{{ content.body }}{% endautoescape %}
  {% endif %}
  {# Слайдер "Лидеры продаж" #}
  {% if tags_leaders %}
    <p class="bg_green">{{ tags_leaders.title }}</p>
    <div class="slider_leaders" style="display: none">
      {% for item in tags_leaders.items %}
        <div>
          <div class="slider_item">
            <div class="slider_image">
              <a href="{{ item.url }}"><img src="{{ item.image }}" alt="{{ item.title }}"></a>
            </div>
            <div class="slider_header">
              <h2><a href="{{ item.url }}">{{ item.title }}</a></h2>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
  {# eof Слайдер "Лидеры продаж" #}
  {# Вставка из Facebook #}
  {% if mode.facebook %}
    <div>
      <iframe src="https://www.facebook.com/plugins/post.php?href=https%3A%2F%2Fwww.facebook.com%2FMIRRA.ua%2Fposts%2F1614232545397120%3A0&width=500"
              width="524"
              height="{{ 657 * 524 / 500}}"
              style="border:none;overflow:hidden"
              scrolling="no"
              frameborder="0"
              allowTransparency="true"
              allow="encrypted-media">
      </iframe>
    </div>
  {% endif %}
  {# eof Вставка из Facebook #}
{% endblock %}

{% block footer_article %}
